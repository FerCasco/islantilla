{% extends 'home/index.html.twig' %}

{% block body %}

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h1 class="text-center">Modificar Habitación</h1>
                        {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.precio, 'Precio', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.precio, {'attr': {'class': 'form-control', 'placeholder': 'Ingrese el precio'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.estado, 'Ocupada', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.estado, {'attr': {'class': 'form-checkbox'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.tipo, 'Tipo', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.tipo, {'attr': {'class': 'form-control', 'placeholder': 'Ingrese el tipo de habitación'}}) }}
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
