{% extends 'home/index.html.twig' %}

{% block title %}Listado de Habitaciones{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center text-white">Listado de Habitaciones</h1>
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Precio</th>
                    <th>Estado</th>
                    <th>Tipo</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for habitacion in habitaciones %}
                    <tr>
                        <td>{{ habitacion.id }}</td>
                        <td>{{ habitacion.precio }}</td>
                        <td>{{ habitacion.estado ? 'No disponible' : 'Disponible' }}</td>
                        <td>{{ habitacion.tipo }}</td>
                        <td>
                            <a href="{{ path('editar_habitacion', {'id': habitacion.id}) }}" class="btn btn-primary">Editar</a>
                            <a href="{{ path('eliminar_habitacion', {'id': habitacion.id}) }}" class="btn btn-danger">Eliminar</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="text-center">
            <a href="{{ path('insertar_habitacion') }}" class="btn btn-success">Insertar Nueva Habitaci√≥n</a>
        </div>
    </div>
{% endblock %}
